#! /bin/sh

PATH=/sbin:/bin:/usr/sbin:/usr/bin:/usr/local/bin:
runlevel=S
prevlevel=N
umask 022
export PATH runlevel prevlevel

trap ":" INT QUIT TSTP
/bin/hostname -F /etc/sysconfig/HOSTNAME

/bin/mount -a
#for telnet
mkdir -p /dev/pts
/bin/mount -n -t devpts none /dev/pts -o mode=0622
/bin/mount -n -t ramfs none /var
mkdir -p /var/empty
mkdir -p /var/log
mkdir -p /var/lock
mkdir -p /var/run
mkdir -p /var/tmp

/bin/echo /sbin/mdev > /proc/sys/kernel/hotplug
mdev -s
#/bin/hotplug


#/sbin/hwclock -s
syslogd

##alsa snd
mkdir -p /dev/snd
ln -s /dev/controlC0 /dev/snd/controlC0
ln -s /dev/pcmC0D0c /dev/snd/pcmC0D0c
ln -s /dev/pcmC0D0p /dev/snd/pcmC0D0p
ln -s /dev/timer /dev/snd/timer

/bin/mount -t yaffs2 /dev/mtdblock5 /app

/sbin/ifconfig lo 127.0.0.1
/etc/init.d/ifconfig-eth0

#/etc/rc.d/init.d/netd start
telnetd -l /bin/login

#/bin/qtopia &
#echo "                                  " > /dev/tty1
#echo "Starting HYQ2440, please waiting..." > /dev/tty1
